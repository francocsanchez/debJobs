<main class="contenedor">
    <form action="/users/edit-profile" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input value="{{user.name}}" type="text" name="name" placeholder="Tu Nombre">
        </div>
        <div class="campo">
            <label>E-mail</label>
            <input value="{{user.email}}" type="email" name="email" placeholder="Tu E-mail" required>
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imgProfile" id="">
            <img src="/img/imgProfile/{{user.imgProfile}}" class="admin-perfil">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>